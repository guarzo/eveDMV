# EVE DMV Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=ecto://postgres:postgres@localhost/eve_dmv_dev

# Phoenix Framework
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_mix_phx_gen_secret
PHX_HOST=localhost
PHX_PORT=4010

# EVE SSO OAuth Configuration
EVE_SSO_CLIENT_ID=your_eve_sso_client_id_here
EVE_SSO_CLIENT_SECRET=your_eve_sso_client_secret_here
EVE_SSO_REDIRECT_URI=http://localhost:4010/auth/callback

# External API Keys
JANICE_API_KEY=your_janice_api_key_here
MUTAMARKET_API_KEY=your_mutamarket_api_key_here_if_needed

# Wanderer-Kills Integration
WANDERER_KILLS_SSE_URL=http://host.docker.internal:4004/api/v1/kills/stream
WANDERER_KILLS_BASE_URL=http://host.docker.internal:4004
WANDERER_KILLS_WS_URL=ws://host.docker.internal:4004/socket

# Pipeline Control
PIPELINE_ENABLED=true
MOCK_SSE_SERVER_ENABLED=false

# Optional: Security Settings
# FORCE_SSL=true
# SESSION_SECURE=true